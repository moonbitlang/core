test "Show::output" {
  fn repr(s : String) {
    let buf = Buffer::new(size_hint=0)
    s |> Show::output(buf)
    buf.to_string()
  }

  @test.eq!(repr("a"), "\"a\"")
  @test.eq!(repr("'"), "\"'\"")
  @test.eq!(repr("\""), "\"\\\"\"")
  @test.eq!(repr("\\"), "\"\\\\\"")
  @test.eq!(repr("\n"), "\"\\n\"")
  @test.eq!(repr("\r"), "\"\\r\"")
  @test.eq!(repr("\b"), "\"\\b\"")
  @test.eq!(repr("\t"), "\"\\t\"")
  @test.eq!(repr("\x00"), "\"\\x00\"")
  @test.eq!(repr("abc'\"def\\"), "\"abc'\\\"def\\\\\"")
}

